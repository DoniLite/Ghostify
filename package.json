{
  "homepage": "https://DoniLite.github.io/Ghostify",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@playwright/test": "^1.45.1",
    "@types/ejs": "^3.1.5",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.12.7",
    "eslint": "^9.9.1",
    "tailwindcss": "^3.4.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.4",
    "typescript-eslint": "^8.3.0"
  },
  "scripts": {
    "build": "npm run tailwind && pnpm exec tsc --outDir build",
    "serve": "concurrently --kill-others \"npm run tailwindDev\" \"tsc --watch\" \"nodemon ./temp/server.js\"",
    "start": "node build/server.js",
    "tailwind": "npx tailwindcss -i ./src/input.css -o ./src/public/output.css",
    "tailwindDev": "npx tailwindcss -i ./src/input.css -o ./src/public/output.css --watch",
    "deploy": "gh-pages -d build",
    "migrate": "pnpx prisma migrate dev",
    "push": "pnpx prisma db push",
    "test": "pnpm exec playwright test",
    "dbTest": "nodemon ./temp/test.spec.js",
    "show-reporter": "pnpm exec playwright show-report",
    "lint": "pnpm eslint"
  },
  "dependencies": {
    "prisma": "^5.15.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
