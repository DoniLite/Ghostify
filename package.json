{
  "name": "ghostify",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run build:client && bun run tailwind",
    "build:prod": "bun run build && bun run prisma:deploy",
    "build:watch": "bun run build:client:watch && bun run tailwind:watch",
    "build:client": "bun run scripts/esbuild.ts",
    "build:preview": "bun run tailwind && bun run build:preview:client",
    "build:preview:client": "bun run scripts/esbuild.ts --preview",
    "build:client:watch": "bun run scripts/esbuild.ts --watch",
    "start": "bun run prisma:deploy && bun run start:server",
    "start:server": "bun run server.tsx",
    "dev:server": "bun run build:watch & bun run watch:server",
    "watch:server": "bun run server.tsx",
    "test": "bun test",
    "test-ci": "bun test tests/",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "fmt": "prettier . --write",
    "tailwind": "bun run scripts/tailwind.ts build",
    "tailwind:watch": "bun run scripts/tailwind.ts build --watch",
    "setup:assets": "bun run scripts/assets.ts",
    "create:dirs": "bun run scripts/dir.ts",
    "deploy:server": "bun run scripts/deploy.ts",
    "prisma:generate": "bun run scripts/prisma.ts generate",
    "prisma:migrate": "bun run scripts/prisma.ts migrate-dev",
    "prisma:migrate:name": "bun run scripts/prisma.ts migrate-dev --name",
    "prisma:deploy": "bun run scripts/prisma.ts migrate-deploy",
    "prisma:pull": "bun run scripts/prisma.ts db-pull",
    "prisma:push": "bun run scripts/prisma.ts db-push",
    "prisma:reset": "bun run scripts/prisma.ts migrate-reset",
    "vite:dev": "bun run scripts/vite.ts --watch",
    "vite:build": "bun run scripts/vite.ts",
    "docker:build": "docker build -t ghostify:latest .",
    "docker:start": "docker run -p 3081:3081 ghostify:latest",
    "browser:install": "bun run scripts/browser.ts install",
    "browser:start": "./.lightpanda-browser/lightpanda serve --host 127.0.0.1 --port 9222",
    "browser:test": "./.lightpanda-browser/lightpanda fetch --dump https://lightpanda.io"
  },
  "dependencies": {
    "@hono/oauth-providers": "^0.8.1",
    "@hono/zod-validator": "*",
    "@lexical/link": "^0.32.1",
    "@lexical/list": "^0.32.1",
    "@lexical/react": "^0.32.1",
    "@lexical/rich-text": "^0.32.1",
    "@lexical/table": "^0.32.1",
    "@prisma/client": "^6.9.0",
    "@resvg/resvg-js": "^2.6.2",
    "bull": "4.16.5",
    "date-fns": "4.1.0",
    "dompurify": "3.2.5",
    "free-translate": "0.6.1",
    "grapesjs": "^0.22.6",
    "hono": "4.7.10",
    "hono-sessions": "^0.7.2",
    "jsdom": "26.0.0",
    "lexical": "^0.32.1",
    "lucide-react": "^0.511.0",
    "marked": "15.0.8",
    "prisma": "^6.9.0",
    "puppeteer": "24.6.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0",
    "satori": "^0.13.1",
    "winston": "^3.17.0",
    "zod": "*",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@types/bun": "latest",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript-eslint": "^8.34.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
