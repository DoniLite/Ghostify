{
	"name": "ghostify",
	"private": true,
	"type": "module",
	"scripts": {
		"build:prod": "bun run build && bun run prisma:deploy",
		"build:watch": "bun run scripts/build.ts --watch",
		"build:client": "bun run scripts/build.ts",
		"build:preview": "bun run scripts/build.ts --preview",
		"start": "bun run start:server",
		"start:server": "bun run server.tsx",
		"dev:server": "bun run build:watch & bun run watch:server",
		"watch:server": "bun run --watch server.tsx",
		"lint": "bunx biome lint",
		"lint:fix": "bunx biome lint --write",
		"fmt": "bunx biome format --write",
		"fmt:check": "bunx biome check --write",
		"push:db": "bunx drizzle-kit push",
		"migrate:db": "bunx drizzle-kit migrate",
		"generate:migrations": "bunx drizzle-kit generate",
		"docker:build": "docker build -t ghostify:latest .",
		"docker:start": "docker run -p 3081:3081 ghostify:latest",
		"browser:install": "bun run scripts/browser.ts install",
		"browser:start": "./.lightpanda-browser/lightpanda serve --host 127.0.0.1 --port 9222",
		"browser:test": "./.lightpanda-browser/lightpanda fetch --dump https://lightpanda.io"
	},
	"dependencies": {
		"@hono/oauth-providers": "^0.8.1",
		"@hono/zod-validator": "*",
		"@lexical/link": "^0.32.1",
		"@lexical/list": "^0.32.1",
		"@lexical/react": "^0.32.1",
		"@lexical/rich-text": "^0.32.1",
		"@lexical/table": "^0.32.1",
		"@resvg/resvg-js": "^2.6.2",
		"@types/pg": "^8.15.4",
		"bull": "4.16.5",
		"bun-plugin-tailwind": "latest",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"date-fns": "4.1.0",
		"dompurify": "3.2.5",
		"dotenv": "^17.2.0",
		"drizzle-orm": "^0.44.3",
		"free-translate": "0.6.1",
		"glob": "^11.0.3",
		"grapesjs": "^0.22.6",
		"hono": "4.7.10",
		"hono-sessions": "^0.7.2",
		"jsdom": "26.0.0",
		"lexical": "^0.32.1",
		"lucide-react": "^0.511.0",
		"marked": "15.0.8",
		"pg": "^8.16.3",
		"puppeteer": "24.6.1",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router-dom": "^7.6.0",
		"reflect-metadata": "^0.2.2",
		"satori": "^0.13.1",
		"tailwindcss": "^4",
		"winston": "^3.17.0",
		"zod": "*",
		"zustand": "^5.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@happy-dom/global-registrator": "^18.0.1",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/bun": "^1.2.19",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^24.0.3",
		"@types/react": "^19.1.5",
		"@types/react-dom": "^19.1.5",
		"chokidar": "^4.0.3",
		"drizzle-kit": "^0.31.4",
		"globals": "^16.2.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
