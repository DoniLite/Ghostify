    "@types/showdown": "^2.0.6",
    "@types/ws": "^8.5.12",
    "apify-client": "^2.9.4",
    "concurrently": "^8.2.2",
    "dompurify": "^3.1.6",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "ejs-lint": "^2.0.0",
    "fastify": "^4.26.2",
