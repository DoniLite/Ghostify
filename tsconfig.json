{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021", // Cible une version plus récente de JavaScript
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./temp",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/@types/*"]
    },
    "skipLibCheck": true // Ignore la vérification des fichiers .d.ts
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.d.ts" // Inclut les fichiers de définitions .d.ts dans la compilation
  ],
  "exclude": ["build"]
}
