<div class="w-full">
  <form class="relative w-full" id="commentFormElement">
    <input
      type="hidden"
      name="pointerId"
      value="<%= typeof pointer === 'undefined'? pointer = '' : pointer %>"
    />
    <input
      type="hidden"
      name="pointerType"
      value="<%= typeof pointerType === 'undefined'? pointerType = '' : pointerType %>"
    />
    <input
      type="file"
      name="commentFile"
      id="commentFileInput"
      class="hidden"
      accept="image/*"
    />
    <div
      class="absolute top-6 lg:right-[22%] right-[20%] cursor-pointer z-50"
      id="commentFileControl"
    >
      <i class="fa-solid fa-file fa-xl text-orange-500"></i>
    </div>
    <div class="w-full flex justify-between mt-4 relative">
      <img
        src="<% if (typeof userIcon === 'undefined') { %>/static/SVG/user.svg <% } else { %> <%= userIcon %> <% } %>"
        class="w-8 h-8 rounded-full mt-3"
        alt="user profil"
      />
      <div
        class="w-full flex lg:flex-row items-center flex-col lg:gap-x-4 p-2 gap-y-3 relative"
      >
        <textarea
          type="text"
          name="comment"
          id=""
          class="w-full lg:w-[80%] outline-none bg-transparent pr-20 text-white border p-4 border-white rounded-lg relative"
          placeholder="ajouter un commentaire"
        ></textarea>
        <button
          class="p-2 w-8 h-8 rounded-full lg:mt-0 mt-4 flex justify-center lg:top-6 top-1 z-50 right-[6%] items-center absolute mx-auto lg:mx-0 text-white bg-orange-500"
        >
          <i class="fa-solid fa-arrow-up fa-xl"></i>
        </button>
      </div>
    </div>
  </form>

  <div class="flex flex-col mt-6 p-4 gap-y-4 w-full">
    <% replies.forEach(reply => { %>
        <div
          class="flex w-full lg:gap-x-4 justify-between"
          id="comment"
          data-index="<%= reply.id %>"
        >
          <img
            src="<% if (typeof reply.userIcon === 'undefined') { %>/static/SVG/user.svg <% } else { %> <%= reply.userIcon %> <% } %>"
            class="w-8 h-8 rounded-full mt-3"
            alt="user profil"
          />
          <div class="p-3 bg-gray-950 text-white rounded-lg w-full flex flex-col">
            <span class="mb-3">
              <span class="text-orange-500 font-bold"><%= reply.author %></span><%= reply.time %>
            </span>
            <span class="font-bold">
              <%= reply.content %>
            </span>
            <% if (typeof reply.file !== 'undefined') { %>
             <img
              src="<%= reply.file %>"
              alt=""
              class="w-full h-auto rounded-lg"
             />
            <% } %>
            <div class="w-full flex mt-4 justify-between">
              <div id="reactions" class="flex gap-x-4">
                <i class="fa-regular fa-thumbs-up fa-lg -ml-1 text-white"></i>
                <span class="text-white"><%= reply.reactionsNumber %> reactions</span>
              </div>
              <span class="text-white font-bold"><%= reply.commentsNumber %> comments</span>
            </div>
          </div>
        </div>
    <% }) %>
  </div>
</div>
<script type="module" src="/static/script/comment.js"></script>
