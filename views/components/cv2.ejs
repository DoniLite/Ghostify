<%- include('rawHeader.ejs', {title: fullName, desc: profile, preview: img ? img : undefined }) %> 
<% if (typeof mode === 'string' && mode === 'view') { %>
  <%- include('cvModal.ejs') %>
<% } %>
<div class="w-[49.6rem] min-h-[52.6rem] mx-auto <%= cvTheme.bg2 %> shadow-2xl rounded-lg overflow-hidden my-10">
    <div class="flex h-full">
      <div class="w-1/3 <%= cvTheme.bg1 %> <%= cvTheme.text1 %> p-8">
        <% if (typeof img === 'string') { %>
          <img
            src="<%= img %>"
            alt="profile image"
            class="rounded-full w-32 h-32 mx-auto mb-4 object-cover shadow-lg"
          />
        <% } %>
        <h2 class="text-2xl font-bold mb-2"><%= fullName %></h2>
        <p class="mb-6"><%= profile %></p>
        <div class="space-y-4">
          <div>
            <h3 class="text-lg font-medium mb-1">Contact</h3>
            <ul class="space-y-2">
              <li><%= phoneNumber %></li>
              <li><%= email %></li>
              <li><%= location %></li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-medium mb-1">Compétences</h3>
            <div class="space-y-2">
              <% skills.forEach(skill => { %>
                <div><%= skill %></div>
              <% }) %>
            </div>
          </div>
          <div>
            <h3 class="text-lg font-medium mb-1">Langues</h3>
            <div class="space-y-2">
              <% languages.forEach(lang => { %>
               <div><%= lang.title %></div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
      <div class="w-2/3 p-8 <%= cvTheme.bg2 %> <%= cvTheme.text2 %>">
        <h2 class="text-2xl font-bold mb-4">Expérience</h2>
        <div class="space-y-6">
          <% experience.forEach(element => { %>
            <div>
              <h3 class="text-lg font-medium"><%= element.title %></h3>
              <% element.contents.forEach(el => { %>
                <p class=""><%= el.duration %></p>
                <p><%= el.description %></p>
              <% }) %>
            </div>
          <% }) %>
        </div>
        <h2 class="text-2xl font-bold mt-8 mb-4">Éducation</h2>
        <div class="space-y-4">
          <% formations.forEach(formation => { %>
            <div>
              <h3 class="text-lg font-medium"><%= formation.title %></h3>
              <p class=""><%= formation.date %></p>
              <p><%= formation.description %></p>
            </div>
          <% }) %>
        </div>
        <h2 class="text-2xl font-bold mt-8 mb-4">Intérêts</h2>
        <div class="grid grid-cols-4 gap-4">
          <% interest.forEach(el => { %>
           <span class=" font-bold text-md"><%= el %></span>
          <% }) %>
        </div>
      </div>
    </div>
</div>
<% if (typeof mode === 'string' && mode === 'view') { %>
  <script type="module" src="/static/js/cvMode.js"></script>
<% } %>
  <%- include('rawFooter.ejs') %>