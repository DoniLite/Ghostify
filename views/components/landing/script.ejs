<script nonce="<%= locals.cspNonce %>">
  const carousel = document.querySelector('.carousel');
  let scrollPosition = 0;
  const scrollStep = carousel.clientHeight; // Taille d'un élément du carousel
  const totalHeight = scrollStep * carousel.children.length;

  function autoScroll() {
    scrollPosition += scrollStep;
    if (scrollPosition >= totalHeight) {
      scrollPosition = 0; // Revenir au début
    }
    carousel.scrollTo({
      top: scrollPosition,
      behavior: 'smooth'
    });
  }

  setInterval(autoScroll, 1000);
</script>