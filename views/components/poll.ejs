<div class="max-w-md mx-auto p-6 bg-white shadow-md rounded-lg">
  <!-- Titre du sondage -->
  <h2 class="text-xl font-bold text-gray-700 mb-4">Quel est votre langage de programmation préféré ?</h2>

  <!-- Liste des options -->
  <form>
    <div class="space-y-3">
      <!-- Option 1 -->
      <label class="flex items-center space-x-3">
        <input type="radio" name="language" value="javascript" class="h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500">
        <span class="text-gray-600">JavaScript</span>
      </label>

      <!-- Option 2 -->
      <label class="flex items-center space-x-3">
        <input type="radio" name="language" value="python" class="h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500">
        <span class="text-gray-600">Python</span>
      </label>

      <!-- Option 3 -->
      <label class="flex items-center space-x-3">
        <input type="radio" name="language" value="java" class="h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500">
        <span class="text-gray-600">Java</span>
      </label>

      <!-- Option 4 -->
      <label class="flex items-center space-x-3">
        <input type="radio" name="language" value="go" class="h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500">
        <span class="text-gray-600">Go</span>
      </label>
    </div>

    <!-- Bouton de validation -->
    <div class="mt-6">
      <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition duration-300">Soumettre</button>
    </div>
  </form>
</div>
