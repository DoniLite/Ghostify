<div class="absolute top-[50vh] anton-sc-regular font-bold text-white text-2xl lg:left-[20%] overflow-y-hidden left-2">
  ' <span class=" carousel carousel-vertical h-8" id="homeCarousel"><span class=" carousel-item h-full">TECH</span> <span class=" carousel-item h-full">ANIME</span> <span class=" carousel-item h-full">CODE</span></span> ' <%= __('home').welcome %>
</div>

<%- include(theme.background) %>

<script nonce="<%= locals.cspNonce %>">
  const carousel = document.querySelector('.carousel');
  let scrollPosition = 0;
  const scrollStep = carousel.clientHeight; // Taille d'un élément du carousel
  const totalHeight = scrollStep * carousel.children.length;

  function autoScroll() {
    scrollPosition += scrollStep;
    if (scrollPosition >= totalHeight) {
      scrollPosition = 0; // Revenir au début
    }
    carousel.scrollTo({
      top: scrollPosition,
      behavior: 'smooth'
    });
  }

  setInterval(autoScroll, 1000);
</script>
